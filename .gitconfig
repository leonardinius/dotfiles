[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
  upstream = cyan
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[user]
	name = Leonids Maslovs
	email = leonids.maslovs@galeoconsulting.com

[push]
	default = simple

[merge]
    conflictstyle = diff3

[alias]
	st = status -sb
	br = branch
	ls = ls-files
	stg = log --all --graph --decorate --oneline --abbrev-commit
	gg = grep --break --heading -n
	autosave = "!git stash save autosave-$(date +%Y%m%d_%H%M%S)"
	co = checkout

[credential]
	helper = cache
[core]
	autocrlf = input
